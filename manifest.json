{
  "manifest_version": 3,
  "name": "Music Code Generator",
  "version": "1.0",
  "description": "Browser extension that allows users to generate random UPC and ISRC (codes).",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/wdycace16.png",
      "32": "images/wdycace32.png",
      "64": "images/wdycace64.png",
      "128": "images/wdycace128.png"
    }
  },
  "permissions": [
    "clipboardWrite"
  ]
}
